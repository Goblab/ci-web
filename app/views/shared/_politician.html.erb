<div id="perfil-legislador" class="twelvecol">
    <div id="informacion-personal">
        <% if politician.photoPath %>
            <%= image_tag politician.photoPath, :alt => politician.name, %>
            <% end %>

            <h1><%= "#{politician.lastName}, #{politician.name}" %></h1>
            <dl>
	            <dt>Email:</dt><dd><%= politician.mail %> </dd>

                <% if politician.partido %>
                <dt>Bloque: </dt><dd><%= politician.partido.name %></dd>      
                <% end %>
            </dl>
        </div>
</div>    
<div class="clearfix">
    <div id="votos" class="ninecol">
        <h2>Votos</h2>
        <%= render :partial => 'shared/votes', :locals => {:votes => politician.votes}%>
    </div>
    <% if politician.twitter_user.blank? %>
    <%= render :partial => 'shared/form_twitter'%>
    <% else %>
    <%= render :partial => 'shared/twitter', :locals => {:politician => politician}%>
    <% end %>
</div>
