<div class="perfil-legislador">
    <% if politician.photoPath %>
      <%= image_tag politician.photoPath, :alt => politician.name, %>
    <% end %>

    <h1><%= "#{politician.lastName}, #{politician.name}" %></h1>

    <div class="details">
      <label>Email: </label><%= politician.mail %> <br/>
      <label>Partido: </label><%= politician.partido.name %>      
    </div>
    
    <div class="votes">
      <h2>Votos</h2>
      
      <ul>
        <% politician.votes.each do |vote| %>
          <li class="<%= vote.voteType.downcase %>">Voto: <%= display_vote_type(vote.voteType) %>, Proyecto: <%= display_project_title(vote.project) %> (<%= link_to "Leer mÃ¡s", vote.project %>)</li>
        <% end %>
      </ul>
    </div>
</div>